<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="392.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.windows.AddPatientAndCardMenuController">
    <center>
        <VBox prefHeight="370.0" prefWidth="426.0">
            <children>
                <fx:include fx:id="patientMenu" source="recordMenu.fxml" />
            </children>
        </VBox>
    </center>
    <bottom>
        <FlowPane prefHeight="32.0" prefWidth="408.0" BorderPane.alignment="CENTER">
            <children>
                <Button onAction="#savePatient" prefHeight="26.0" prefWidth="60.0" text="Save">
                    <FlowPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </FlowPane.margin>
                    <tooltip>
                        <Tooltip text="Click to save patient" />
                    </tooltip>
                </Button>
                <Button onAction="#cancel" prefHeight="26.0" prefWidth="80.0" text="Cancel">
                    <FlowPane.margin>
                        <Insets bottom="20.0" left="125.0" top="20.0" />
                    </FlowPane.margin>
                    <tooltip>
                        <Tooltip text="Click to cancel and return to main menu" />
                    </tooltip>
                </Button>
            </children>
        </FlowPane>
    </bottom>
</BorderPane>
